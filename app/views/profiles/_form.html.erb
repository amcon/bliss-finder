    </div>
    <div class="form-input">
      <%= f.label :question_2, "Do you want to find out what happens if you don't fuck with Charly Bliss?" %>
      <%= f.radio_button :question_2, "true" %>
      <%= f.label :true, "yes" %>
      <%= f.radio_button :question_2, "false" %>
      <%= f.label :false, "no" %>
    </div>

    <%= f.submit(class: 'btn-primary') %>
  </div>
<% end %>
