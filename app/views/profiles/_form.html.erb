<%= form_with(model: profile) do |f| %>
  <% if profile.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <!-- profile pic upload here -->
    <!-- <%= f.hidden_field(:profile_image_cache) %>
    <%= f.file_field(:profile_image) %> -->
    <!-- <div id="profile_widget_opener"></div> -->
    <button type="button" id="profile_widget_opener" class="cloudinary-button">Upload files</button>
    <div class="form-input">
      <%= f.label :email %>
      <%= f.text_field :email%>
    </div>
    <div class="form-input">
      <%= f.label :question_1, "Do you fuck with Charly Bliss?" %>
      <%= f.radio_button :question_1, "true" %>
